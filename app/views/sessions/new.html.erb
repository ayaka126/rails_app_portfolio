<% content_for(:title, 'ログイン') %>
<div class="container mt-5">
	<div class="login">
		<h1 class="text-center mb-4">ログインはこちら</h1>
    <div class="row justify-content-center">
      <div class="col-lg-8">
				<%= form_with url: login_path, local: true do |f| %>
					<div class = "field">
						<%= f.label :email, "メールアドレス", class: "form-label fw-bold mt-3" %>
						<%= f.text_field :email, autofocus: true, placeholder: "メールアドレスを入力してください", class: "form-control" %>
					</div>
					<div class = "field">
						<%= f.label :password, "パスワード", class: "form-label fw-bold mt-3" %>
						<%= f.password_field :password, autofocus: true, placeholder: "パスワードを入力してください", class: "form-control" %>
					</div>
					<div class="login_button">
						<%= f.submit "ログイン", class: "btn btn-primary mt-4 mb-4" %>
					</div>
				<% end %>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-lg-8">
				<%= link_to "新規登録はこちら", new_user_path %>
			</div>
		</div>
	</div>
</div>
