<div class= "login">
	<h1>ログインはこちら</h1>
	<%= form_with url: login_path, local: true do |f| %>
		<div class = "field">
			<%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
			<%= f.text_field :email, autofocus: true, placeholder: "メールアドレスを入力してください", class: "form-control" %>
		</div>
		<div class = "field">
			<%= f.label :password, "パスワード", class: "form-label fw-bold" %>
			<%= f.password_field :password, autofocus: true, placeholder: "パスワードを入力してください", class: "form-control" %>
		</div>
		<div class="login_button">
			<%= f.submit "ログイン", class: "btn btn-primary mb-4" %>
		</div>
		<%= link_to "新規登録はこちら", new_user_path %>
	<% end %>
</div>
