<% content_for(:title, '新規登録') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
			<h1 class="text-center mt-3 mb-3">新規登録</h1>
			<%= form_with model: @user, url: user_path, local: true do |f| %>
				<%= render "shared/error", object: f.object %>
				<div class="field">
					<%= f.label :username, "お名前", class: "form-label fw-bold mt-3" %>
					<%= f.text_field :username, autofocus: true, placeholder: "お名前を入力してください", class: "form-control" %>
				</div>
				<div class = "field">
					<%= f.label :email, "メールアドレス", class: "form-label fw-bold mt-3" %>
					<%= f.text_field :email, autofocus: true, placeholder: "メールアドレスを入力してください", class: "form-control" %>
				</div>
				<div class = "field">
					<%= f.label :password, "パスワード", class: "form-label fw-bold mt-3" %>
					<%= f.password_field :password, autofocus: true, placeholder: "英語と数字を使用した6文字以上のパスワードを入力してください", class: "form-control" %>
				</div>
				<div class = "field">
					<%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label fw-bold mt-3" %>
					<%= f.password_field :password_confirmeation, autofocus: true, placeholder: "パスワードをもう一度入力してください", class: "form-control" %>
				</div>
				<div class = "field">
					<%= f.label :introduction, "自己紹介文", class: "form-label fw-bold mt-3" %>
					<%= f.text_field :introduction, autofocus: true, placeholder: "簡単な自己紹介文を入力してください（任意）", class: "form-control" %>
				</div>
				<div class="field">
					<%= f.label :userimage, "アイコン画像" , class: "form-label fw-bold mt-3"%>
					<%= f.file_field :userimage %>
				</div>
				<div class = "acition">
					<%= f.submit "新規登録", class: "btn btn-primary mb-4 mt-4" %>
				</div>
			<%= link_to "ログインはこちら", login_path %>
			<% end %>
</div>
</div>
</div>

