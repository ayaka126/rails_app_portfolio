<h2>ユーザー情報を編集</h2>
<%= form_with model: @user do |f| %>
	<%= render "shared/error", object: f.object %>
	<div class="field">
		<%= f.label :name, "お名前", class: "form-label fw-bold" %>
		<%= f.text_field :username, autofocus: true, placeholder: "お名前を入力してください", class: "form-control" %>
	</div>
	<div class = "field">
		<%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
		<%= f.text_field :email, autofocus: true, placeholder: "メールアドレスを入力してください", class: "form-control" %>
	</div>
	<div class = "field">
		<%= f.label :password, "パスワード", class: "form-label fw-bold" %>
		<%= f.password_field :password, autofocus: true, placeholder: "パスワードを入力してください", class: "form-control" %>
	</div>
	<div class = "field">
		<%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label fw-bold" %>
		<%= f.password_field :password_confirmeation, autofocus: true, placeholder: "パスワードをもう一度入力してください", class: "form-control" %>
	</div>
	<div class="field">
		<%= f.label :userimage, "アイコン画像", class: "form-label fw-bold" %>
		<%= f.file_field :userimage %>
	</div>
	<div class = "acition">
		<%= f.submit "編集を完了する", class: "btn btn-primary mb-4" %>
	</div>
	<%= link_to "マイページに戻る", user_path %>
<% end %>
