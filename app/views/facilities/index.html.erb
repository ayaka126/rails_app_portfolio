<div class="container">
<h1>保育園一覧</h1>
<table>
<thead>
  <tr>
    <th>保育園名</th>
    <th>住所</th>
    <th>最寄駅</th>
    <th>電話番号</th>
    <th>HP</th>
    <th>更新日</th>
    <th>作成日</th>
    <th>参照</th>
  </tr>
</thead>

<tbody>
  <% @facilities.each do |facility| %>
    <tr>
      <td><%= facility.name %></td>
      <td><%= facility.address %></td>
      <td><%= facility.station %></td>
      <td><%= facility.tel %></td>
      <td><%= link_to facility.homepage %></td>
      <td><%= facility.updated_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
      <td><%= facility.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
      <td>
        <%= link_to "参照", facility_path(facility) %>
      </td>
    </tr>
  <% end %>
</tbody>
</tabel>
<%= link_to "新規登録", new_facility_path, class: "btn btn-primary" %>
</div>
