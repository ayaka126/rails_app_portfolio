<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<h1 class="text-center mt-3">質問・相談・交流などなんでもお気軽に♪</h1>
			<%= form_with(model: [@facility, @post], local: true) do |f| %>
				<%= render "shared/error", object: f.object %>
				<div class="field">
					<%= f.label :title, "タイトル", class: "form-label mt-3" %>
					<%= f.text_field :title, autofocus: true, placeholder: "タイトルを入力してください", class: "form-control" %>
				</div>
				<div class ="field">
					<%= f.label :content, "内容", class: "form-label mt-3" %>
					<%= f.text_area :content, rows: 7, autofocus: true, placeholder: "内容を入力してください", class: "form-control" %>
				</div>
				<div class = "acition">
					<%= f.submit "投稿する", class: "btn btn-primary mb-4 mt-4" %>
				</div>
			<% end %>
		</div>
	</div>
  <div class="row justify-content-center">
    <div class="col-lg-8">
			<%= link_to "←投稿一覧へ戻る", facility_posts_path, class: "btn btn-light float-start mt-3" %>
		</div>
	</div>
</div>

