<div class="container mt-5">
  <div class="row justify-content-center mt-3">
    <div class="col-lg-8">
      <h2 class="text-center mb-4">投稿内容を編集する</h2>
      <%= form_with(model: [@facility, @post], local: true) do |f| %>
        <%= render "shared/error", object: f.object %>
        <div class="field">
          <%= f.label :title, "タイトル", class: "form-label" %>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class ="field">
          <%= f.label :content, "内容", class: "form-label" %>
          <%= f.text_area :content, rows: 7, autofocus: true, class: "form-control" %>
        </div>
        <div class = "action mt-3">
          <%= f.submit "編集完了", class: "btn btn-primary", data: { turbo: false } %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <%= link_to "←詳細ページへ戻る", facility_post_path(@facility, @post), class: "btn btn-light float-start mt-3" %>
    </div>
  </div>
</div>

